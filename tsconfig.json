{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src/**/*.mjs", "src/**/*.js", "src/**/*.ts", "*.mjs", "*.js", "*.ts"],
  "exclude": ["node_modules", "dist"]
}